<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="bankingsystem.ooadassignment.MainMenuController"
            prefWidth="600" prefHeight="400"
            style="-fx-background-color: linear-gradient(to bottom right, #4B0082, #663399);">

    <Label layoutX="180" layoutY="50" text="BANKING SYSTEM"
           style="-fx-font-size: 28px; -fx-text-fill: white; -fx-font-weight: bold;"/>

    <Button fx:id="registerBtn" layoutX="200" layoutY="150"
            text="Register Customer" prefWidth="200"
            onAction="#openRegistration"
            style="-fx-background-color: white; -fx-text-fill: #301934; -fx-font-weight: bold;"/>

    <Button fx:id="loginBtn" layoutX="200" layoutY="210"
            text="Login" prefWidth="200"
            onAction="#openLogin"
            style="-fx-background-color: white; -fx-text-fill: #301934; -fx-font-weight: bold;"/>

    <Button fx:id="exitBtn" layoutX="200" layoutY="270"
            text="Exit" prefWidth="200"
            onAction="#exitApp"
            style="-fx-background-color: white; -fx-text-fill: #301934; -fx-font-weight: bold;"/>
</AnchorPane>
