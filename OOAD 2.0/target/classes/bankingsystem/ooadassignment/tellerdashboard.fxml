<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="450" prefWidth="700" style="-fx-background-color: linear-gradient(to bottom right, #2E8B57, #3CB371);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="bankingsystem.ooadassignment.tellerdashboardcontroller">

    <!-- Welcome Labels -->
    <Label fx:id="welcomeLabel" layoutX="20" layoutY="20" style="-fx-text-fill: white; -fx-font-size: 20px;" />

    <!-- Customer List -->
    <Label layoutX="20" layoutY="60" style="-fx-text-fill: white; -fx-font-size: 16px;" text="Customers:" />
    <ListView fx:id="customerListView" layoutX="20" layoutY="90" prefHeight="250" prefWidth="300" />

    <!-- Customer Action Buttons -->
    <Button layoutX="340" layoutY="90" onAction="#addCustomer" prefWidth="150" text="Add Customer" />
    <Button layoutX="340" layoutY="140" onAction="#deleteCustomer" prefWidth="150" text="Delete Customer" />
    <Button layoutX="340" layoutY="190" onAction="#viewCustomerAccounts" prefWidth="150" text="View Accounts" />
    <Button layoutX="340" layoutY="240" onAction="#logout" prefWidth="150" text="Logout" />
</AnchorPane>
