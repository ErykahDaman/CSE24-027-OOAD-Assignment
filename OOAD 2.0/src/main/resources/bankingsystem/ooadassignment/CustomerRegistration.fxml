<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="bankingsystem.ooadassignment.CustomerRegistrationController"
            prefWidth="600" prefHeight="550"
            style="-fx-background-color: linear-gradient(to bottom right, #4B0082, #663399);">

    <children>
        <Label text="Customer Registration"
               layoutX="150" layoutY="30"
               style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;"/>

        <!-- Name -->
        <Label text="Full Name:" layoutX="100" layoutY="100" style="-fx-text-fill:white;"/>
        <TextField fx:id="nameField" layoutX="250" layoutY="95" prefWidth="200"/>

        <!-- Age -->
        <Label text="Age:" layoutX="100" layoutY="150" style="-fx-text-fill:white;"/>
        <TextField fx:id="ageField" layoutX="250" layoutY="145" prefWidth="200"/>

        <!-- Customer ID -->
        <Label text="Customer ID:" layoutX="100" layoutY="200" style="-fx-text-fill:white;"/>
        <TextField fx:id="idField" layoutX="250" layoutY="195" prefWidth="200"/>

        <!-- Password -->
        <Label text="Password:" layoutX="100" layoutY="250" style="-fx-text-fill:white;"/>
        <PasswordField fx:id="passwordField" layoutX="250" layoutY="245" prefWidth="200"/>

        <!-- Contact Number -->
        <Label text="Contact Number:" layoutX="100" layoutY="300" style="-fx-text-fill:white;"/>
        <TextField fx:id="contactField" layoutX="250" layoutY="295" prefWidth="200"/>

        <!-- Buttons -->
        <Button text="Register" layoutX="150" layoutY="400" prefWidth="120" onAction="#registerCustomer"
                style="-fx-background-color:white; -fx-text-fill:#301934; -fx-font-weight:bold;"/>
        <Button text="Back" layoutX="300" layoutY="400" prefWidth="120" onAction="#backToMainMenu"
                style="-fx-background-color:white; -fx-text-fill:#301934; -fx-font-weight:bold;"/>
    </children>
</AnchorPane>
