<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bankingsystem.ooadassignment.customerdashboard"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom, #1a1a2e, #16213e);">

    <!-- TOP SECTION -->
    <top>
        <VBox spacing="8" alignment="CENTER_LEFT"
              style="-fx-background-color: linear-gradient(to right, #4a148c, #6a1b9a);
                     -fx-background-radius: 0 0 15 15;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 15, 0, 0, 3);">
            <padding><Insets top="25" right="25" bottom="20" left="25"/></padding>

            <Label fx:id="welcomeLabel" text="Welcome,"
                   style="-fx-text-fill: white;
                          -fx-font-size: 36px;
                          -fx-font-weight: bold;
                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 8, 0, 0, 2);" />

            <HBox spacing="50" style="-fx-padding: 10 0 0 0;">
                <VBox spacing="6">
                    <Label text="Customer ID:"
                           style="-fx-text-fill: rgba(255,255,255,0.7);
                                  -fx-font-size: 13px;
                                  -fx-font-weight: 600;" />
                    <Label fx:id="customerIDLabel" text="-"
                           style="-fx-text-fill: white;
                                  -fx-font-size: 16px;
                                  -fx-font-weight: bold;" />
                </VBox>

                <VBox spacing="6">
                    <Label text="Name:"
                           style="-fx-text-fill: rgba(255,255,255,0.7);
                                  -fx-font-size: 13px;
                                  -fx-font-weight: 600;" />
                    <Label fx:id="nameLabel" text="-"
                           style="-fx-text-fill: white;
                                  -fx-font-size: 16px;
                                  -fx-font-weight: bold;" />
                </VBox>

                <VBox spacing="6">
                    <Label text="Email:"
                           style="-fx-text-fill: rgba(255,255,255,0.7);
                                  -fx-font-size: 13px;
                                  -fx-font-weight: 600;" />
                    <Label fx:id="emailLabel" text="-"
                           style="-fx-text-fill: white;
                                  -fx-font-size: 16px;
                                  -fx-font-weight: bold;" />
                </VBox>
            </HBox>
        </VBox>
    </top>

    <!-- SIDE BAR - ACCOUNT CREATION -->
    <left>
        <VBox spacing="18" alignment="TOP_CENTER"
              style="-fx-background-color: linear-gradient(to bottom, #2d1b69, #1a0f3d);
                     -fx-padding: 25;">
            <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

            <Label text="Account Management"
                   style="-fx-font-size: 17px;
                          -fx-font-weight: bold;
                          -fx-text-fill: white;
                          -fx-padding: 0 0 10 0;" />

            <Separator prefWidth="200" style="-fx-background-color: rgba(255,255,255,0.2);" />

            <Label text="Select Account Type"
                   style="-fx-font-size: 14px;
                          -fx-font-weight: 600;
                          -fx-text-fill: rgba(255,255,255,0.9);" />

            <ChoiceBox fx:id="accountTypeChoice" prefWidth="200"
                       style="-fx-background-color: rgba(255,255,255,0.1);
                              -fx-text-fill: white;
                              -fx-background-radius: 8;
                              -fx-border-color: rgba(255,255,255,0.3);
                              -fx-border-radius: 8;
                              -fx-border-width: 1;" />

            <Button fx:id="createAccountBtn" text="Create Account"
                    prefWidth="200" prefHeight="40"
                    style="-fx-background-color: linear-gradient(to right, #7b2cbf, #9d4edd);
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 10;
                           -fx-cursor: hand;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 0, 2);">
                <VBox.margin><Insets top="5"/></VBox.margin>
            </Button>

            <Button fx:id="deleteAccountBtn" text="Delete Account"
                    prefWidth="200" prefHeight="40"
                    style="-fx-background-color: linear-gradient(to right, #c9184a, #ff4d6d);
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 10;
                           -fx-cursor: hand;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 0, 2);" />

            <Region VBox.vgrow="ALWAYS" />

            <Button fx:id="logoutBtn" text="Logout"
                    prefWidth="200" prefHeight="40"
                    style="-fx-background-color: rgba(255,255,255,0.1);
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-font-weight: 600;
                           -fx-background-radius: 10;
                           -fx-border-color: rgba(255,255,255,0.3);
                           -fx-border-radius: 10;
                           -fx-border-width: 2;
                           -fx-cursor: hand;" />
        </VBox>
    </left>

    <!-- MAIN CENTER SECTION -->
    <center>
        <VBox spacing="15"
              style="-fx-background-color: rgba(255,255,255,0.05);
                     -fx-background-radius: 15;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);">
            <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label text="Your Accounts"
                       style="-fx-font-size: 22px;
                              -fx-font-weight: bold;
                              -fx-text-fill: white;" />
                <Region HBox.hgrow="ALWAYS" />
                <Label text="ðŸ’¼" style="-fx-font-size: 28px;" />
            </HBox>

            <Separator style="-fx-background-color: rgba(255,255,255,0.2);" />

            <ListView fx:id="accountsListView" prefHeight="300"
                      style="-fx-background-color: rgba(0,0,0,0.2);
                             -fx-background-radius: 10;
                             -fx-border-color: rgba(255,255,255,0.1);
                             -fx-border-radius: 10;
                             -fx-border-width: 1;
                             -fx-padding: 5;" />

            <Label text="Account Actions"
                   style="-fx-font-size: 16px;
                          -fx-font-weight: 600;
                          -fx-text-fill: rgba(255,255,255,0.9);
                          -fx-padding: 10 0 5 0;" />

            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="depositBtn" text="ðŸ’° Deposit"
                        prefWidth="220" prefHeight="50"
                        style="-fx-background-color: linear-gradient(to right, #06d6a0, #00b894);
                               -fx-text-fill: white;
                               -fx-font-size: 15px;
                               -fx-font-weight: bold;
                               -fx-background-radius: 12;
                               -fx-cursor: hand;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 3);" />

                <Button fx:id="withdrawBtn" text="ðŸ’¸ Withdraw"
                        prefWidth="220" prefHeight="50"
                        style="-fx-background-color: linear-gradient(to right, #f77f00, #d62828);
                               -fx-text-fill: white;
                               -fx-font-size: 15px;
                               -fx-font-weight: bold;
                               -fx-background-radius: 12;
                               -fx-cursor: hand;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 3);" />
            </HBox>
        </VBox>

    </center>

</BorderPane>