<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="bankingsystem.ooadassignment.InvestmentController"
            prefWidth="600" prefHeight="500"
            style="-fx-background-color: linear-gradient(to bottom right, #4B0082, #663399);">

    <children>
        <!-- Title -->
        <Label text="Investment Account"
               layoutX="180" layoutY="30"
               style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;"/>

        <!-- Account Information -->
        <Label text="Account Number:" layoutX="100" layoutY="120" style="-fx-text-fill:white;"/>
        <Label fx:id="accountNumberLabel" layoutX="280" layoutY="120" style="-fx-text-fill:white;"/>

        <Label text="Branch:" layoutX="100" layoutY="160" style="-fx-text-fill:white;"/>
        <Label fx:id="branchLabel" layoutX="280" layoutY="160" style="-fx-text-fill:white;"/>

        <Label text="Balance (P):" layoutX="100" layoutY="200" style="-fx-text-fill:white;"/>
        <Label fx:id="balanceLabel" layoutX="280" layoutY="200" style="-fx-text-fill:white;"/>

        <Label text="Interest Rate (%):" layoutX="100" layoutY="240" style="-fx-text-fill:white;"/>
        <Label fx:id="interestLabel" layoutX="280" layoutY="240" style="-fx-text-fill:white;"/>

        <!-- Invest -->
        <Label text="Invest Amount:" layoutX="100" layoutY="300" style="-fx-text-fill:white;"/>
        <TextField fx:id="investAmountField" layoutX="280" layoutY="295" prefWidth="150"/>
        <Button text="Invest" layoutX="450" layoutY="295" onAction="#handleInvest"
                style="-fx-background-color:white; -fx-text-fill:#301934; -fx-font-weight:bold;"/>

        <!-- Withdraw -->
        <Label text="Withdraw Amount:" layoutX="100" layoutY="340" style="-fx-text-fill:white;"/>
        <TextField fx:id="withdrawAmountField" layoutX="280" layoutY="335" prefWidth="150"/>
        <Button text="Withdraw" layoutX="450" layoutY="335" onAction="#handleWithdraw"
                style="-fx-background-color:white; -fx-text-fill:#301934; -fx-font-weight:bold;"/>

        <!-- Apply Interest -->
        <Button text="Apply Interest" layoutX="230" layoutY="390" prefWidth="150" onAction="#applyInterest"
                style="-fx-background-color:white; -fx-text-fill:#301934; -fx-font-weight:bold;"/>

        <!-- Back -->
        <Button text="Back" layoutX="240" layoutY="440" prefWidth="120"
                style="-fx-background-color:white; -fx-text-fill:#301934; -fx-font-weight:bold;"/>
    </children>
</AnchorPane>
