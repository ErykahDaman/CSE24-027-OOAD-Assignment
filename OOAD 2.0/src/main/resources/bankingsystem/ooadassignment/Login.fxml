<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="bankingsystem.ooadassignment.loginController"
            prefWidth="500" prefHeight="400"
            style="-fx-background-color: linear-gradient(to bottom right, #1a1a2e, #16213e, #0f3460);">

    <!-- Main Login Card -->
    <VBox layoutX="75" layoutY="50" spacing="25" alignment="TOP_CENTER"
          style="-fx-background-color: rgba(255,255,255,0.1);
                 -fx-background-radius: 20;
                 -fx-border-color: rgba(255,255,255,0.2);
                 -fx-border-radius: 20;
                 -fx-border-width: 1;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 20, 0, 0, 5);"
          prefWidth="350" prefHeight="300">
        <padding><Insets top="30" right="40" bottom="30" left="40"/></padding>

        <!-- Title with Icon -->
        <HBox alignment="CENTER" spacing="10">
            <Label text="ðŸ”" style="-fx-font-size: 32px;"/>
            <Label text="LOGIN"
                   style="-fx-font-size: 32px;
                          -fx-text-fill: white;
                          -fx-font-weight: bold;
                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 5, 0, 0, 2);"/>
        </HBox>

        <!-- Separator Line -->
        <Separator prefWidth="270"
                   style="-fx-background-color: rgba(255,255,255,0.3);">
            <VBox.margin><Insets top="-10" bottom="5"/></VBox.margin>
        </Separator>

        <!-- ID Field -->
        <VBox spacing="8" alignment="CENTER_LEFT">
            <Label text="INPUT YOUR ID"
                   style="-fx-text-fill: rgba(255,255,255,0.9);
                          -fx-font-size: 13px;
                          -fx-font-weight: 600;"/>
            <HBox spacing="10" alignment="CENTER_LEFT"
                  style="-fx-background-color: rgba(0,0,0,0.3);
                         -fx-background-radius: 10;
                         -fx-border-color: rgba(255,255,255,0.3);
                         -fx-border-radius: 10;
                         -fx-border-width: 1;
                         -fx-padding: 5 10;">
                <Label text="ðŸ‘¤" style="-fx-font-size: 18px;"/>
                <TextField fx:id="idField"
                           promptText="Enter your ID"
                           style="-fx-background-color: transparent;
                                  -fx-text-fill: white;
                                  -fx-prompt-text-fill: rgba(255,255,255,0.5);
                                  -fx-font-size: 14px;"
                           prefWidth="220"/>
            </HBox>
        </VBox>

        <!-- Password Field -->
        <VBox spacing="8" alignment="CENTER_LEFT">
            <Label text="Password"
                   style="-fx-text-fill: rgba(255,255,255,0.9);
                          -fx-font-size: 13px;
                          -fx-font-weight: 600;"/>
            <HBox spacing="10" alignment="CENTER_LEFT"
                  style="-fx-background-color: rgba(0,0,0,0.3);
                         -fx-background-radius: 10;
                         -fx-border-color: rgba(255,255,255,0.3);
                         -fx-border-radius: 10;
                         -fx-border-width: 1;
                         -fx-padding: 5 10;">
                <Label text="ðŸ”’" style="-fx-font-size: 18px;"/>
                <PasswordField fx:id="passwordField"
                               promptText="Enter your password"
                               style="-fx-background-color: transparent;
                                      -fx-text-fill: white;
                                      -fx-prompt-text-fill: rgba(255,255,255,0.5);
                                      -fx-font-size: 14px;"
                               prefWidth="220"/>
            </HBox>
        </VBox>

        <!-- Buttons -->
        <HBox spacing="15" alignment="CENTER">
            <VBox.margin><Insets top="10"/></VBox.margin>

            <Button text="Login"
                    onAction="#loginCustomer"
                    prefWidth="130" prefHeight="45"
                    style="-fx-background-color: linear-gradient(to right, #7b2cbf, #9d4edd);
                           -fx-text-fill: white;
                           -fx-font-size: 15px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 12;
                           -fx-cursor: hand;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 10, 0, 0, 3);"/>

            <Button text="Back"
                    onAction="#backToMain"
                    prefWidth="130" prefHeight="45"
                    style="-fx-background-color: rgba(255,255,255,0.15);
                           -fx-text-fill: white;
                           -fx-font-size: 15px;
                           -fx-font-weight: 600;
                           -fx-background-radius: 12;
                           -fx-border-color: rgba(255,255,255,0.4);
                           -fx-border-radius: 12;
                           -fx-border-width: 2;
                           -fx-cursor: hand;"/>
        </HBox>
    </VBox>

    <!-- Footer Text -->
    <Label text="Secure Banking System"
           layoutX="165" layoutY="365"
           style="-fx-text-fill: rgba(255,255,255,0.5);
                  -fx-font-size: 12px;
                  -fx-font-style: italic;"/>

</AnchorPane>