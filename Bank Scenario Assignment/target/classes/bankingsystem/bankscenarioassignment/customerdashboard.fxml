<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="450" prefWidth="600"
            style="-fx-background-color: linear-gradient(to bottom right, #4B0082, #663399);"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bankingsystem.bankscenarioassignment.CustomerDashboardController">

    <!-- Welcome Label -->
    <Label fx:id="welcomeLabel" layoutX="20" layoutY="20"
           style="-fx-text-fill: white; -fx-font-size: 20px;" />

    <!-- Customer Details -->
    <Label layoutX="20" layoutY="60" style="-fx-text-fill: white;" text="Customer ID:" />
    <Label fx:id="customerIDLabel" layoutX="120" layoutY="60" style="-fx-text-fill: white;" />
    <Label layoutX="20" layoutY="90" style="-fx-text-fill: white;" text="Name:" />
    <Label fx:id="nameLabel" layoutX="120" layoutY="90" style="-fx-text-fill: white;" />
    <Label layoutX="20" layoutY="120" style="-fx-text-fill: white;" text="Email:" />
    <Label fx:id="emailLabel" layoutX="120" layoutY="120" style="-fx-text-fill: white;" />

    <!-- Read-Only Accounts List -->
    <Label layoutX="20" layoutY="160" style="-fx-text-fill: white; -fx-font-size: 16px;" text="Your Accounts:"/>
    <ListView fx:id="accountsListView" layoutX="20" layoutY="185" prefHeight="150" prefWidth="560"/>

    <!-- Manage Accounts Button -->
    <Button layoutX="20" layoutY="350" text="Manage Accounts" onAction="#openAccountsDashboard"/>

    <!-- Logout Button -->
    <Button layoutX="430" layoutY="410" prefWidth="150" text="Logout" onAction="#logout"/>
</AnchorPane>
