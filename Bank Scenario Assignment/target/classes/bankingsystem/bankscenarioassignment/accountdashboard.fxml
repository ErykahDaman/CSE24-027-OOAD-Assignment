<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="450" prefWidth="600"
            style="-fx-background-color: linear-gradient(to bottom right, #4B0082, #663399);"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bankingsystem.bankscenarioassignment.AccountDashboardController">

    <!-- Accounts Label -->
    <Label layoutX="20" layoutY="20" style="-fx-text-fill: white; -fx-font-size: 20px;" text="Your Accounts:"/>

    <!-- List of Accounts -->
    <ListView fx:id="accountsListView" layoutX="20" layoutY="50" prefHeight="200" prefWidth="560"/>

    <!-- Selected Account Info -->
    <Label fx:id="selectedAccountLabel" layoutX="20" layoutY="260"
           style="-fx-text-fill: white; -fx-font-size: 14px;" text="Select an account to see details."/>

    <!-- Create Account Section -->
    <Label layoutX="20" layoutY="290" style="-fx-text-fill: white;" text="Account Type:"/>
    <ComboBox fx:id="accountTypeComboBox" layoutX="120" layoutY="285" prefWidth="120"/>
    <Button layoutX="260" layoutY="285" text="Create Account" onAction="#createAccount"/>

    <!-- Deposit Section -->
    <Label layoutX="20" layoutY="330" style="-fx-text-fill: white;" text="Deposit Amount:"/>
    <TextField fx:id="depositField" layoutX="120" layoutY="325" prefWidth="80"/>
    <Button layoutX="220" layoutY="325" text="Deposit" onAction="#deposit"/>

    <!-- Withdraw Section -->
    <Label layoutX="20" layoutY="370" style="-fx-text-fill: white;" text="Withdraw Amount:"/>
    <TextField fx:id="withdrawField" layoutX="120" layoutY="365" prefWidth="80"/>
    <Button layoutX="220" layoutY="365" text="Withdraw" onAction="#withdraw"/>

    <!-- Delete Account Section -->
    <Button layoutX="320" layoutY="325" text="Delete Account" onAction="#deleteAccount"/>

    <!-- Back Button -->
    <Button layoutX="20" layoutY="410" text="Back" onAction="#back"/>
</AnchorPane>
