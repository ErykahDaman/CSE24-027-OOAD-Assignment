<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="bankingsystem.bankscenarioassignment.TellerDashboardController" prefWidth="600" prefHeight="400">

    <Label fx:id="welcomeLabel" layoutX="20" layoutY="20" text="Welcome, Teller!" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <ListView fx:id="customersListView" layoutX="20" layoutY="60" prefWidth="400" prefHeight="250"/>

    <Button text="View Accounts" layoutX="440" layoutY="60" prefWidth="130" onAction="#viewCustomerAccounts"/>
    <Button text="Delete Customer" layoutX="440" layoutY="110" prefWidth="130" onAction="#deleteCustomer"/>
    <Button text="New Customer" layoutX="440" layoutY="160" prefWidth="130" onAction="#addCustomer"/>
    <Button text="Logout" layoutX="440" layoutY="210" prefWidth="130" onAction="#logout"/>

</AnchorPane>
