<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="300" prefWidth="400" style="-fx-background-color: linear-gradient(to bottom right, #4B0082, #663399);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bankingsystem.bankscenarioassignment.LoginController">

    <Label layoutX="160" layoutY="30" style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" text="LOGIN" />

    <Label layoutX="50" layoutY="80" style="-fx-text-fill: white;" text="ID:" />
    <TextField fx:id="idField" layoutX="120" layoutY="75" prefWidth="200" />

    <Label layoutX="50" layoutY="130" style="-fx-text-fill: white;" text="Password:" />
    <PasswordField fx:id="passwordField" layoutX="120" layoutY="125" prefWidth="200" />

    <Button layoutX="120" layoutY="180" onAction="#loginCustomer" prefWidth="100" style="-fx-background-color: white; -fx-text-fill: #301934; -fx-font-weight: bold;" text="Login" />

    <Button layoutX="230" layoutY="180" onAction="#backToMain" prefWidth="90" style="-fx-background-color: white; -fx-text-fill: #301934; -fx-font-weight: bold;" text="Back" />
</AnchorPane>
